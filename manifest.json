{
  "manifest_version": 2,
  "name": "Haptiq",
  "version": "1.0.0",
  "description": "Helps you signin to your favorite sites with your Android Phone's Fingerprint Scanner.",

  "background":{
    "persistant": true,
    "scripts": ["scripts/crypto-js/crypto-js.js", "scripts/socketio.js", "scripts/randoms.js", "scripts/crypto.js", "scripts/background.js"]
  },

  "browser_action":{
    "default_icon":{
      "16": "images/unauthenticated16.png",
      "48": "images/unauthenticated48.png",
      "128": "images/unauthenticated128.png"
    },
    "default_title": "Haptiq Authorization",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": ["content-scripts/dom-interfacer.js"]
  }],
  "icons": {
      "16": "images/unauthenticated16.png",
      "48": "images/unauthenticated48.png",
      "128": "images/unauthenticated128.png"
    },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "images/*.png",
    "static/*.png",
    "static/*.js",
    "static/*.css",
    "static/*.html"
  ]
}
